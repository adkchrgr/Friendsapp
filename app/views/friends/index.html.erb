
<h1>Friend List</h1>

<table class="table table-striped table-hover table-bordered" >
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
      <!-- Add other table headers for attributes -->
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td>
            <%= link_to "Show this friend", friend, class:"btn btn-secondary" %>
        </td>
        <!-- Add other table data cells for attributes -->
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Friend", new_friend_path, class:"btn btn-secondary" %>





